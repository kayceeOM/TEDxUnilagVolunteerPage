<% if volunteer_application.accepted? %>
    <%= link_to 'Revoke', revoke_volunteer_application_path(volunteer_application), class: 'btn btn-success', method: :put, remote: true%>
<% else %>
    <%= link_to 'Accept', accept_volunteer_application_path(volunteer_application), class: 'btn', method: :put, remote: true%>
<% end %>